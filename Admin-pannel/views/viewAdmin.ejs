<%- include('layout/header') %>

  <!-- Content wrapper -->
  <div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
      <!-- Basic Bootstrap Table -->
      <div class="card">
        <h5 class="card-header">Table Basic</h5>
        <div class="table-responsive text-nowrap">
          <table class="table">
            <thead>
              <tr>
                <th>NO</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody class="table-border-bottom-0">

              <% let i=1 %>
                <% for(var admin of adminData) { %>

                  <!-- <tr onclick="window.location.href='/admin/<%= admin.id %>'" style="cursor:pointer;"> -->
                  <tr>

                    <td data-bs-toggle="modal" data-bs-target="#modal_<%= admin._id %>" style="cursor:pointer;">
                      <%= i++ %>
                    </td>
                    <td data-bs-toggle="modal" data-bs-target="#modal_<%= admin._id %>" style="cursor:pointer;">
                      <%= admin.name %>
                    </td>
                    <td data-bs-toggle="modal" data-bs-target="#modal_<%= admin._id %>" style="cursor:pointer;">
                      <%= admin.email %>
                    </td>
                    <td data-bs-toggle="modal" data-bs-target="#modal_<%= admin._id %>" style="cursor:pointer;">
                      <%= admin.phone %>
                    </td>
                    <!-- <td>
                      <img src="<%= admin.profile %>" alt="" height="100px">
                    </td> -->
                    <td><span class="badge bg-label-primary me-1">Active</span></td>
                    <td>
                      <div class="dropdown">
                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                          <i class="icon-base bx bx-dots-vertical-rounded"></i>
                        </button>
                        <div class="dropdown-menu">
                          <a class="dropdown-item" href="/admin/updateAdminDetails/<%= admin.id %>"><i
                              class="icon-base bx bx-edit-alt me-1"></i> Edit</a>
                          <a class="dropdown-item" href="javascript:void(0);"><i class="icon-base bx bx-trash me-1"></i>
                            Delete</a>
                        </div>
                      </div>
                    </td>
                  </tr>



                  <% } %>

            </tbody>
          </table>

          <%- include('adminDetails') %>

        </div>
      </div>
      <!--/ Basic Bootstrap Table -->

    </div>
    <!-- / Content -->


    <%- include('layout/footer') %>