    <div>
        <h2>Add new Movie</h2>
        <form action="/addMovie" method="post">
            <table border="1">
                <tr>
                    <td>
                        Title
                    </td>
                    <td>
                        <input type="text" name="title" id="">
                    </td>
                </tr>
                <tr>
                    <td>Reating</td>
                    <td>
                        <select name="reating" id="">
                            <option value="-1">give reating</option>
                            <% var reating=[1,2,3,4,5] %>
                                <% reating.map((v,i)=>{ %>
                                    <option value="<%= v %>">
                                        <%= v %>
                                    </option>
                                    <% }) %>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        language
                    </td>
                    <td>
                        <input type="checkbox" name="language" id="" value="english">english
                        <input type="checkbox" name="language" id="" value="hindi">hindi
                        <input type="checkbox" name="language" id="" value="gujrati">gujrati
                    </td>
                </tr>
                <tr>
                    <td>
                        genre
                    </td>
                    <td>
                        <input type="checkbox" name="genre" id="" value="action">action
                        <input type="checkbox" name="genre" id="" value="horror">horror
                        <input type="checkbox" name="genre" id="" value="drama">drama
                    </td>
                </tr>
                <tr>
                    <td>certificated</td>
                    <td>
                        <input type="radio" name="age" id="" value="under"> under 18
                        <input type="radio" name="age" id="" value="over"> 18+
                        <input type="radio" name="age" id="" value="both"> Family
                    </td>
                </tr>
                <tr>
                    <td>Realese date</td>
                    <td>
                        <input type="date" name="" id="">
                    </td>
                </tr>
                <tr>
                    <td>
                        Duration
                    </td>
                    <td>
                        <input type="number" name="duration" id="">Mins
                    </td>
                </tr>
                <tr>
                    <td>Cast</td>
                    <td>
                        <input type="text" name="cast" id="">
                    </td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td>
                        <textarea name="desc" id=""></textarea>
                    </td>
                </tr>
                <!-- <tr>
                    <td>poster</td>
                    <td><input type="file" name="posterimg"></td>
                </tr>
                <tr>
                    <td>background image</td>
                    <td><input type="file" name="bgimg"></td>
                </tr> -->
                <tr>
                    <td>
                        <input type="submit" value="Add Movie" name="addMovie">
                    </td>

                </tr>
            </table>
        </form>
    </div>
</body>

</html>