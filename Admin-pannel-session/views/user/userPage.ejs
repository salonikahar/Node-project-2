<%- include('layout/userHeader') %>

  <!-- Blog Section with Sidebar -->
  <div class="container mt-5">
    <div class="row">

      <!-- Sidebar -->
      <aside class="col-md-4 col-lg-3 mb-4">
        <div class="category-sidebar p-4 bg-light border rounded shadow-sm h-100">
          <h4 class="mb-3 text-primary">Categories</h4>
          <ul class="list-group list-group-flush">

            <% for (var category of categoryData){ %>
              <li class="list-group-item"><a href="#" class="text-decoration-none text-dark">
                  <%= category.category %>
                </a></li>
              <% } %>
          </ul>
        </div>
      </aside>

      <!-- Main Content Area -->
      <main class="main col-md-8 col-lg-9">


        <!-- Blog Posts Section -->
        <section id="blog-posts" class="blog-posts section mb-5">
          <div class="row gy-4">

            <% for(var subcate of subCateData){%>

              <div class="col-lg-6">
                <article class="position-relative h-100">
                  <div class="post-img position-relative overflow-hidden">
                    <img src="<%= subcate.poster %>" class="img-fluid rounded" alt="Blog Image">

                  </div>

                  <div class="post-content d-flex flex-column mt-3">
                    <h3 class="post-title">
                      <%= subcate.title %>
                    </h3>

                    <div class="meta d-flex align-items-center mb-2">
                      <div class="d-flex align-items-center me-3">
                        <i class="bi bi-person me-1"></i> <span>John Doe</span>
                      </div>
                      <div class="d-flex align-items-center">
                        <i class="bi bi-folder2 me-1"></i> <span class="">
                          <%= subcate.categoryId.category %>
                        </span>
                      </div>
                    </div>

                    <p style="font-size: 20px;">
                      <%- subcate.description %>
                    </p>


                    <hr>

                    <a href="/blogDetails" class="readmore stretched-link">
                      <span>Read More</span> <i class="bi bi-arrow-right"></i>
                    </a>
                  </div>
                </article>
              </div>
              <% } %>

          </div>
        </section>

        <section id="blog-pagination" class="blog-pagination section">

          <div class="container">
            <div class="d-flex justify-content-center">
              <ul>
                <li><a href="#"><i class="bi bi-chevron-left"></i></a></li>
                <li><a href="#">1</a></li>
                <li><a href="#" class="active">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li>...</li>
                <li><a href="#">10</a></li>
                <li><a href="#"><i class="bi bi-chevron-right"></i></a></li>
              </ul>
            </div>
          </div>

        </section><!-- /Blog Pagination Section -->

      </main>
    </div>
  </div>